params {
  outDir = "$PWD/"
  inDir = "$PWD/"
  referenceGenome = "$PWD/reference.fasta"
  threads = 1
  minLen = 75
  depth = 5
  minDpIntrahost = 100
  trimLen = 0
  adaptersFile = "$PWD/input/ART_adapters.fa"

  // container specific
  containerAll = "./containers/vf_container.sif"
}

singularity {
    enabled = true
    autoMounts = true
    //cacheDir = "$PWD"
    //runOptions = "--bind /lustre,/nfs,/software"
}

process {
    withName:indexReferenceBWA {
        container = './containers/singularity_bwa_v0717.sif'
    }
    withName:runFastp {
        container = './containers/singularity_fastp_v0201.sif'
    }
    withName:runIvar {
        container = './containers/ivar_latest.sif'
    }
    withName:runReadCounts {
        container = './containers/singularity_bam_readcount.sif'
    }
    withName:alignConsensus2Ref {
        container = './containers/singularity_mafft.sif'
    }
    withName:doAssemblyMetrics {
        container = './containers/singularity_assembly_metrics.sif'
        //container = params.containerAll
    }
    withName:runIntraHostScript {
        container = "./containers/singularity_intrahost.sif"
    }
    withName:runPangolin{
        container = "./containers/pangolin_latest.sif"
    }
    withName:runNextClade{
        container = "./containers/nextclade_latest.sif"
    }

}
